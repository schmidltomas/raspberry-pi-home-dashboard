<Wallpaper>:
    source: './wallpapers/01947_atouchofred_1920x1080.jpg'
    size_hint: 1, 1

<Label>:
    size: self.texture_size
    size_hint: None, None
    font_name: './fonts/OpenSans-Light.ttf'
    font_size: 50

<Time>:
    font_size: 110

<Date>:
    font_size: 55

<Temperature>:

<TemperatureIcon>:
    size_hint: None, None

<NewsImage>:
    size_x: 100
    size_hint: None, None
    pos_hint: {'right': 0.17}
    mipmap: True

<NewsTitle>:
    pos: 120, 20

<News>:
    size: 600, 0
    font_name: './fonts/OpenSans-Regular.ttf'
    font_size: 24
    text_size: self.width, None
    height: self.texture_size[1]

<Greeting>:
    font_size: 100
    font_name: './fonts/OpenSans-Light.ttf'

<CustomLayout>:
    FloatLayout:
        Wallpaper:
            id: wallpaper
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        ### Time and date widget ###
        RelativeLayout:
            size_hint: None, None
            pos_hint: {'top': 1}

            RelativeLayout:
                pos: 60, -40

                Time:
                    id: time_shadow
                    pos: 1, -1
                    color: 0, 0, 0, .5

                Time:
                    id: time

            RelativeLayout:
                pos: 70, -130

                Date:
                    id: date_shadow
                    pos: 1, -1
                    color: 0, 0, 0, .5

                Date:
                    id: date

        ### Weather widget ###
        WeatherWidget:
            id: weather_widget
            size_hint: None, None
            pos_hint: {'top': 0.15, 'right': 0.09}

            ### Current weather ###
            Weather:

                Temperature:
                    id: temperature_shadow
                    pos: 1, -1
                    color: 0, 0, 0, .5

                Temperature:
                    id: temperature

                TemperatureIcon:
                    id: temperature_icon
                    pos: 120, -35

            ### Forecast ###
            Weather:
                pos: 250, 0

                Temperature:
                    id: temperature_1_shadow
                    pos: 1, -1
                    color: 0, 0, 0, .5

                Temperature:
                    id: temperature_1

                TemperatureIcon:
                    id: temperature_1_icon
                    pos: 120, -35

            Weather:
                pos: 500, 0

                Temperature:
                    id: temperature_2_shadow
                    pos: 1, -1
                    color: 0, 0, 0, .5

                Temperature:
                    id: temperature_2

                TemperatureIcon:
                    id: temperature_2_icon
                    pos: 120, -35

            Weather:
                pos: 750, 0

                Temperature:
                    id: temperature_3_shadow
                    pos: 1, -1
                    color: 0, 0, 0, .5

                Temperature:
                    id: temperature_3

                TemperatureIcon:
                    id: temperature_3_icon
                    pos: 120, -35

        ### News widget ###
        NewsWidget:
            id: news_widget
            size: news_1.size
            size_hint: None, None
            pos_hint: {'top': 0.93, 'right': 0.89}

            NewsLine:
                pos: 20, 0

                NewsImage:
                    id: news_1_image

                NewsTitle:
                    id: news_1_title
                    News:
                        id: news_1_shadow
                        pos: 1, -1
                        color: 0, 0, 0, .5
                    News:
                        id: news_1

            NewsLine:
                pos: 20, -100

                NewsImage:
                    id: news_2_image

                NewsTitle:
                    id: news_2_title
                    News:
                        id: news_2_shadow
                        pos: 1, -1
                        color: 0, 0, 0, .5
                    News:
                        id: news_2

            NewsLine:
                pos: 20, -200

                NewsImage:
                    id: news_3_image

                NewsTitle:
                    id: news_3_title
                    News:
                        id: news_3_shadow
                        pos: 1, -1
                        color: 0, 0, 0, .5
                    News:
                        id: news_3

        ### Greeting widget ###
        RelativeLayout:
            size: greeting.size
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Greeting:
                id: greeting_shadow
                pos: 2, -2
                color: 0, 0, 0, .5

            Greeting:
                id: greeting
