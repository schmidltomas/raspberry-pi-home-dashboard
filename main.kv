<Wallpaper>:
    source: './wallpapers/01947_atouchofred_1920x1080.jpg'
    size_hint: 1, 1

<Label>:
    size: self.texture_size
    size_hint: None, None
    font_name: './fonts/OpenSans-Light.ttf'
    font_size: 50

<Time>:
    font_size: 110

<Date>:
    font_size: 55

<WeatherLabel>:
    font_name: './fonts/OpenSans-SemiBold.ttf'
    font_size: 18

<WeatherLabelLayout>:
    pos: 50, 60

<Temperature>:
    font_size: 44

<TemperatureIcon>:
    size: 55, 55
    size_hint: None, None
    mipmap: True

<TemperatureIconLayout>:
    pos: 130, -10

<NewsImage>:
    size_x: 100
    size_hint: None, None
    pos_hint: {'right': 0.17}
    mipmap: True

<NewsTitle>:
    pos: 120, 20

<News>:
    size: 600, 0
    font_name: './fonts/OpenSans-Regular.ttf'
    font_size: 24
    text_size: self.width, None
    height: self.texture_size[1]

<Greeting>:
    font_size: 100
    font_name: './fonts/OpenSans-Light.ttf'

<CustomLayout>:
    FloatLayout:
        Wallpaper:
            id: wallpaper
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        ### Time and date widget ###
        RelativeLayout:
            size_hint: None, None
            pos_hint: {'top': 1}

            RelativeLayout:
                pos: 60, -40

                Time:
                    id: time_shadow
                    pos: 1, -1
                    color: 0, 0, 0, .5

                Time:
                    id: time

            RelativeLayout:
                pos: 70, -130

                Date:
                    id: date_shadow
                    pos: 1, -1
                    color: 0, 0, 0, .5

                Date:
                    id: date

        ### Weather widget ###
        WeatherWidget:
            id: weather_widget
            size_hint: None, None
            pos_hint: {'top': 0.15, 'right': 0.09}

            ### Today ###
            WeatherDay:
                id: weather_day_0
