<Wallpaper>:
    source: './wallpapers/1920x1080/01947_atouchofred.jpg'
    size_hint: 1, 1

<Label>:
    size: self.texture_size
    size_hint: None, None
    font_name: './fonts/OpenSans-Light.ttf'
    font_size: 50

<Time>:
    font_size: 130

<Date>:
    font_size: 70

<WeatherHeader>:
    font_name: './fonts/OpenSans-SemiBold.ttf'
    font_size: 18

<WeatherHeaderLayout>:
    pos: 50, 60

<Temperature>:
    font_size: 44

<TemperatureIcon>:
    size: 55, 55
    size_hint: None, None
    mipmap: True

<TemperatureIconLayout>:
    pos: 130, -10

<NewsImage>:
    size_x: 100
    size_hint: None, None
    pos_hint: {'right': 0.17}
    mipmap: True

<NewsTitle>:
    pos: 120, 20

<News>:
    size: 600, 0
    font_name: './fonts/OpenSans-Regular.ttf'
    font_size: 24
    text_size: self.width, None
    height: self.texture_size[1]

<Greeting>:
    font_name: './fonts/OpenSans-Light.ttf'
    font_size: 100

<TrafficHeader>:
    font_name: './fonts/OpenSans-SemiBold.ttf'
    font_size: 18

<TrafficIcon>:
    size: 50, 50
    size_hint: None, None
    mipmap: True

<CustomLayout>:
    FloatLayout:
        Wallpaper:
            id: wallpaper
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        ### Time and date widget ###
        TimeWidget:
            size_hint: None, None
            pos_hint: {'top': 0.99, 'right': 0.05}

            RelativeLayout:
                pos: 60, -40

                Time:
                    id: time_shadow
                    pos: 2, -2
                    color: 0, 0, 0, .5

                Time:
                    id: time

            RelativeLayout:
                pos: 70, -150

                Date:
                    id: date_shadow
                    pos: 2, -2
                    color: 0, 0, 0, .5

                Date:
                    id: date

        ### Weather widget ###
        WeatherWidget:
            id: weather_widget
            size_hint: None, None
            pos_hint: {'top': 0.15, 'right': 0.09}

            ### Today ###
            WeatherDay:
                id: weather_day_0
                pos: 0, 0

                Weather:
                    pos: 0, 0

                    TemperatureLabelLayout:
                        pos: 10, 5

                        Temperature:
                            id: temperature_0_0_shadow
