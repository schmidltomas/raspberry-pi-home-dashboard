<Time>:

<Temperature>:

<TemperatureIcon>:
    size_hint: None, None

<Wallpaper>:
    source: './wallpapers/03075_sunsetoverfindon_1920x1080.jpg'
    size_hint: 1, 1

<Label>:
    size: self.texture_size
    size_hint: None, None
    font_name: './fonts/OpenSans-Light.ttf'
    font_size: 50

<News>:
    size: 600, 600
    font_name: './fonts/OpenSans-Regular.ttf'
    font_size: 25
    text_size: self.width, None
    height: self.texture_size[1]

<CustomLayout>:
    FloatLayout:
        Wallpaper:
            id: wallpaper
            pos_hint: {'center_x': .5, 'center_y': .5}

        ### Time and date widget ###
        RelativeLayout:
            size_hint: None, None
            pos_hint: {'top': 1}

            RelativeLayout:
                pos: 60, -40

                Time:
                    id: time_shadow
                    pos: 1, -1
                    font_size: 100
                    color: 0, 0, 0, .5

                Time:
                    id: time
                    font_size: 100

            RelativeLayout:
                pos: 70, -130

                Date:
                    id: date_shadow
                    pos: 1, -1
                    color: 0, 0, 0, .5

                Date:
                    id: date

        ### Weather widget ###
        RelativeLayout:
            size_hint: None, None
            pos_hint: {'top': 0.15}

            RelativeLayout:
                pos: 80, 0

                Temperature:
                    id: temperature_shadow
                    pos: 1, -1
                    color: 0, 0, 0, .5

                Temperature:
                    id: temperature

                TemperatureIcon:
                    id: temperature_icon
                    pos: 115, -8

        ### News widget ###
        RelativeLayout:
            size_hint: None, None
            pos_hint: {'top': 0.9, 'right': 0.7}

            RelativeLayout:
                News:
                    id: news_1_shadow
                    pos: 1, -1
                    color: 0, 0, 0, .5

                News:
                    id: news_1